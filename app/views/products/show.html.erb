<div class="w-[81%] absolute bg-slate-50 pl-3 py-5 mt-4 rounded-md shadow-lg">
  <div class="pl-4">
    <div class="mt-1">
      <% if flash[:message] %>
      <div class="w-[90%]">
        <div class="px-3   py-4 text-sm <%= flash[:type] == 'error' ? 'text-red-600' : 'text-green-600' %> rounded-lg bg-gray-200" role="alert">
          <span class="font-medium"><%= flash[:message] %></span>
        </div>
      </div>
      <%end %>
      <%= render @product %>
    </div>
    
    <div class='mt-3'>
      <%= link_to "Edit", edit_product_path(@product),class:"bg-green-300 btn-show" %> |
      <%= link_to "Back", products_path, class:"btn-back" %>
      <%= button_to "Destroy", @product, method: :delete, class:"btn-delete mt-4" %>
    </div>
  </div>
</div>
