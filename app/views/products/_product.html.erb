<div id="<%= dom_id product %>">
  <p>
    <strong>Supplier:</strong>
    <%= product.supplier_id %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Cost price:</strong>
    <%= product.cost_price %>
  </p>

  <p>
    <strong>Selling price:</strong>
    <%= product.selling_price %>
  </p>

</div>
