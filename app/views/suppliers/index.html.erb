
<p style="color: green"><%= notice %></p>
<div class="w-[80%] absolute">
  <div class="mt-4">
    <h1 class="mb-4 text-4xl font-bold" >Suppliers</h1>
  </div>
  <div class="mb-4"><%= link_to "New Suppplier", new_supplier_path, class: "bg-blue-300 px-2 py-2 rounded" %></div>
  <div class="relative overflow-x-auto shadow-md" >
    <table class="w-full text-md text-left text-gray-700">
      <thead class="text-xl text-gray-700 uppercase bg-gray-50">
          <tr>
              <th class="px-6 py-3">Supplier name</th>
              <th class="px-6 py-3">Contact</th>
              <th class="px-6 py-3">Address</th>
              <th class="px-6 py-3">Action</th>
          </tr>
      </thead>
      <tbody>
            <% @suppliers.each do |supplier|%>
              <tr class="bg-white border-b hover:bg-gray-300">
                <td class="px-6 py-4"> <%= link_to supplier.name, supplier_path(supplier) %> </td>
                <td class="px-6 py-4"> <%= link_to supplier.number, supplier_path(supplier) %></td>
                <td class="px-6 py-4"> <%= link_to supplier.address, supplier_path(supplier) %> </td>
                <div>
                  <td class="px-6 py-4 flex">
                    <%= link_to "Edit", edit_supplier_path(supplier), class:"bg-green-300 btn-show mr-2" %>
                    <%= button_to "Destroy", supplier, method: :delete, class:"btn-delete" %>
                  </td>
                </div>
              </tr>
            <%end%>
          </tbody>
    </table>
  </div>
</div>





