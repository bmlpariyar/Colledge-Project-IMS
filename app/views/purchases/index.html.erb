

<table>
    <thead>
        <tr>
        <th>Bill No</th>
        <th>Date</th>
        <th>Supplier</th>
        <th>Product</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Discount (%)</th>
        <th>Taxable Amount</th>
        <th>VAT (%)</th>
        <th>Net Total</th>
        <th>Description</th>
        </tr>
    </thead>
    <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.bill_no %></td>
        <td><%= purchase.date %></td>
        <td><%= purchase.supplier.name %></td>
        <td><%= link_to purchase.product.name, purchase_url(purchase) %></td>
        <td><%= purchase.quantity %></td>
        <td><%= purchase.total %></td>
        <td><%= purchase.discount %></td>
        <td><%= purchase.taxable_amount %></td>
        <td><%= purchase.vat %></td>
        <td><%= purchase.net_total %></td>
        <td><%= purchase.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

